@model ApplicationCore.Models.MovieDetailsModel

    <style>
        
        .backgroundImage {
            height: 24.5rem;
            width: 100%;
            background-size: cover;
            background-color: white;

        }
        
    </style>

<div class="backgroundImage" style="background-image: url(@Model.BackdropUrl)">
    <div class="row">
        <div class="col-md-3 offset-2">

            <div>
                <img src="@Model.PosterUrl" class="card-img-top" width:50%; height: 50% />
            </div>

        </div>
        <div class="col-md-4">
            <div class="row mt-2">
                <div class="col-12">
                    <h3 class="text-white">
                        @Model.Title
                    </h3>
                    <h7 class="text-white"> @Model.Tagline </h7>
                </div>

            </div>

            <div class="row">
                <div class="col-4 text-white font-weight-bold mt-2">
                    @Model.RunTime m | @Model.ReleaseDate.Value.Date.Year
                </div>
                <div class="col-8">

                    @foreach (var genre in Model.Genres)
                    {
                    <a class="badge" asp-action="Genre" asp-route-id="@genre.Id">
                        @genre.Name
                    </a>
                    }
                </div>
            </div>

            

            <div class="row">
                <div class="col-12 text-light mt-2">
                    @Model.Overview
                </div>
            </div>
        </div>

        <div class="col-md-2 mt-4 offset-1">
            <ul class="list-group">
                <li class="list-group-item">

                </li>
                <li class="list-group-item">
                    <button type="button" class="btn btn-outline-light btn-lg btn-block btn-sm">
                        <i class="far fa-edit mr-1"></i>
                        REVIEW
                    </button>
                </li>
                

                <li class="list-group-item">
                    <a class="btn btn-light btn-lg btn-block btn-sm" asp-route-id="@Model.Id" asp-controller="User" asp-action="PurchaseMovie">
                        BUY @Model.Price
                    </a>

                    
                </li>
            </ul>
        </div>

    </div>
</div>